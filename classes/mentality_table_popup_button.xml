<!-- a popup button used to display role information -->
<class class="mentality_table_popup_button" parent="mentality_popup_button">
	<translation id="hint" translation_id="348297" type="use" value="Select your match mentality[COMMENT: team instructions: match mentality hint]" />
	<symbol id="widget_type" value="mentality_description_text"/>
	<record id="widget_properties">
		<integer id="width" value="450"/>
		<boolean id="multiline" value="true"/>
		<flags id="auto_size" value="vertical"/>
	</record>

	<record id="opened_event" event_id="mnPI" />
	<record id="closed_event" event_id="mnPD" />

	<record id="table_properties">
		<flags id="mode" value="fill_rows,stripe_rows,select_rows,dont_allow_click_unselect_single,hide_headings,highlight_on_scroll" />
		<integer id="row_height" value="28" />
		<integer id="row_spacing" value="1" />
		<boolean id="navigation_focus_target" value="true" />
		<flags id="highlighted_appearance" value="tables/standard/row/selected/row" />

		<list id="column_table_properties">
			<!--first column is some text-->
			<record>
				<flags id="id" value="Tstr" />
				<flags id="width" value="140" />
				<integer id="left" value="5" />
				<translation id="name" translation_id="348204" type="use" value="Mentality[Comment: prefix used before mentality type text on quick tactical instruction button during match]" />
				<record id="widget_info">
					<symbol id="class" value="mentality_label" />
					<flags id="appearance" value="buttons/subtle/normal/button" />
					<record id="primary_icon_properties" red_replacement="tcs_gold" />
					<flags id="font" value="tcs_gold" />
				</record>
				<record id="column_widget_properties">
					<flags id="alignment" value="left,centre_y" />
				</record>
				<record id="column_heading">
					<flags id="alignment" value="left,centre_y" />
					<translation id="text" translation_id="348204" type="use" value="Mentality[Comment: prefix used before mentality type text on quick tactical instruction button during match]" />
					<translation id="hint" translation_id="348204" type="use" value="Mentality[Comment: prefix used before mentality type text on quick tactical instruction button during match]" />
				</record>
			</record>

		</list>
	</record>
</class>