<panel>
	<layout class="stick_to_sides_attachment" apply_to_children="true"/>

	<container class="tcs_box" appearance="tcs/boxes/main/solid/paper" rrep="bg" transparency="0.4"/>

	<container>
		<attachment_group class="horizontal_arrange" horizontal_alignment="right"/>
 
		<container width="820">
			<layout class="stick_to_sides_attachment" apply_to_children="true" inset="60,0,60,8"/>

			<container class="tcs_box" appearance="tcs/boxes/tablets/twitter/paper">
				<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend"/>
	
				<!-- REST OF CONTENT -->
				<container>
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>
		
					<!-- PLAYER HOME -->
					<container id="PHHm">
						<attachment_group class="vertical_arrange" vertical_alignment="middle"/>
		
						<!-- PLAYER HUB ICON -->
						<widget class="picture" height="96" keep_aspect_ratio="true" scale_picture="true" colour="tcs_accent" image_alignment="centre" file="tcs/icons/playerhub/player shot"/>
		
						<!-- WELCOME TO PLAYER HUB TEXT -->
						<widget class="text" text="Welcome to PlayerHub!" auto_size="vertical" font="title" colour="fg" alignment="centre" size="xxlarge"/>
						<widget class="text" text="Select an app below to find out more information." auto_size="vertical" font="title" colour="fg" alignment="centre"/>
					</container>
			
					<!-- MEDICAL REPORT -->
					<container id="PHMe" hidn="true">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>
			
						<!-- SURELY THERE'S GOTTA BE AN EASIER WAY TO MAKE THIS SCROLL? -->
						<!-- SHOUTOUT TO MUSTERMANNFM THOUGH -->
						<container class="vertical_adaptive_container" gap="0" mode="distribute_equally">
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<container default_height="-1" priority="1">
								<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend"/>
					
								<container class="scrolling_box" id="ScrB" navigation_container="true">
									<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0"/>

									<!-- NOW WE'RE COOKING -->
									<container class="player_injury_panel" file="none">
										<attachment_group class="vertical_arrange_autosize" vertical_gap="8"/>
								
										<record id="object_property" get_property="objt" set_property="objt"/>
																
										<boolean id="should_force_refresh" value="true"/>
										<string id="skin_style" value="title link"/>
										<string id="history_table_selected_row_appearance" value="tables/custom/attributes/required/row"/>
								
										<!-- SPACER TO PUSH CONTENT DOWN -->
										<container height="20"/>

										<!-- CURRENT INJURY -->
										<container height="380" class="tcs_box">
											<layout class="stick_to_sides_attachment" apply_to_children="true"/>
								
											<container>
												<attachment_group class="vertical_arrange" vertical_layout="25, -1, 130" horizontal_alignment="horizontal" horizontal_inset="0"/>

												<container>
													<attachment_group class="horizontal_arrange" horizontal_layout="-1,-1" horizontal_gap="4" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0"/>

													<widget class="text" auto_size="all" font="title" colour="accent">
														<translation id="text" translation_id="450786" type="use" value="Physical Status[COMMENT: FR20159; player injuries panel; panel title for displaying location of injury]"/>
													</widget>

													<container id="RecT" hidden="true">
														<attachment_group class="horizontal_arrange" horizontal_alignment="right" horizontal_gap="4" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0"/>

														<widget class="button" auto_size="all" colour="white" appearance="labels/standard/label" red_replacement="injury_body_colour_recurring">
															<translation id="text" translation_id="441139" type="use" value="Recurring Injury[COMMENT: header for a column of recurring injuries]"/>
														</widget>
													</container>
												</container>

												<!-- body images -->
												<container id="PBCn">
													<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

													<widget class="player_injury_indicator_picture" id="PBGr"/>
												</container>

												<!-- injury details -->
												<container>
													<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

													<!-- current injury details -->
													<container id="CIct" hidden="true">
														<attachment_group class="horizontal_arrange" horizontal_layout="-1, -1, -1" horizontal_gap="2" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0"/>

														<container>
															<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

															<widget class="text" id="CInm" auto_size="vertical" multiline="true" colour="injury_body_colour_injured" font="capitals_bold"/>
															<widget class="text" id="CIde" auto_size="none" multiline="true"/>
														</container>

														<container>
															<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

															<widget class="text" auto_size="all" font="title">
																<translation id="text" translation_id="447652" type="use" value="Treatment[COMMENT: FR 20159; player injury table; treatment type player is receiving column header]"/>
															</widget>
															<widget class="text" id="CItr" auto_size="none" multiline="true" size="large" style="bold"/>
														</container>

														<container>
															<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

															<widget class="text" auto_size="all" font="title">
																<translation id="text" translation_id="247182" type="use" value="Expected Return"/>
															</widget>

															<container>
																<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

																<widget class="text" id="CIrt" auto_size="vertical" multiline="true" size="large" style="bold"/>
																<widget class="text" id="CIto" auto_size="vertical" multiline="true"/>
															</container>
														</container>
													</container>

													<!-- injury risk details -->
													<container id="IRct" hidden="true">
														<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

														<widget class="text" id="IRnm" auto_size="vertical" multiline="true" colour="attention" font="capitals_bold"/>
														<widget class="text" id="IRde" auto_size="none" multiline="true"/>
													</container>

													<!-- historic injury details -->
													<container id="HIct" hidden="true">
														<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

														<widget class="text" id="HInm" auto_size="vertical" multiline="true" colour="injury_body_colour_past_injury" font="capitals_bold"/>
														<widget class="text" id="HIde" auto_size="none" multiline="true"/>
													</container>

													<!-- no injury risk -->
													<container id="NpRk" hidden="true">
														<attachment_group class="vertical_arrange" vertical_alignment="top, extend" horizontal_alignment="horizontal" horizontal_inset="0"/>

														<widget class="text" id="InRn" auto_size="vertical" multiline="true" colour="text" font="capitals_bold"/>
														<widget class="text" id="InRd" auto_size="none" multiline="true"/>
													</container>
												</container>
											</container>
									
										</container>

										<!-- INJURY HISTORY -->
										<container height="300" class="tcs_box">
											<attachment_group class="vertical_arrange_autosize"/>

											<widget class="link_button" section="PHin" auto_size="all" colour="accent" id="injh">
												<translation id="text" translation_id="450787" type="use" value="Injury History[COMMENT: FR20159; team injuries panel; panel title for player's historical injury list]"/>
											</widget>

											<widget class="table" id="InHi" layout="85, -2, -1" mode="fill_rows, select_rows, stripe_rows" sort_disabled="true" select_event="seli" auto_size="vertical" fixed_size_rows="true" auto_size_rows="false" row_height="28" selected_appearance="none">
												<list id="headings">
													<record index="0">
														<translation id="text" translation_id="230120" type="use" value="Date"/>
													</record>
													<record index="1">
														<translation id="text" translation_id="247523" type="use" value="Injury[COMMENT: Player Injury name, table header]"/>
													</record>
													<record index="2">
														<translation id="text" translation_id="247527" type="use" value="Time Out[COMMENT: Player Injury time out, table header]"/>
													</record>
												</list>

												<record id="default_properties">
													<flags id="auto_size" value="vertical"/>
													<boolean id="multiline" value="false"/>
													<flags id="alignment" value="left, centre_y"/>
												</record>

												<list id="column_table_properties">
													<record index="0" left="4" alignment="left, centre_y" auto_size="vertical"/>
													<record index="1" alignment="left, centre_y" auto_size="vertical"/>
													<record index="2" alignment="left, centre_y" auto_size="vertical"/>
												</list>
											</widget>
										</container>


									</container>
					
								</container>
					
							</container>
		
						</container>
			
					</container>
			
					<container id="PHtr" class="player_transfer_information_panel" hidn="true">
						<translation id="title" translation_id="227953" type="use"/>
						<record id="object_property" get_property="objt" set_property="objt"/>
					</container>
			
				</container>
	
				<!-- BUTTONS -->
				<container height="60" class="tcs_subtle_box">
					<attachment_group class="horizontal_arrange" horizontal_alignment="middle"/>
	
					<record id="default_properties" width="44"/>
	
					<!-- HISTORY PANEL -->
					<container>
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>

						<!-- OPEN BUTTON -->
						<widget class="icon_button" id="PHo2" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="tcs/icons/playerhub/switcher/health" icon="">
							<translation id="hint" translation_id="229719" type="use"/>
							
							<event id="click_event" event_id="HtHm"/>
								
							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="HtHm">
								<record id="action_event">
									<flags id="event_id" value="hide"/>
									<flags id="event_target" value="PHHm"/>
								</record>
							</attachment>

							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="HtHm">
								<record id="action_event">
									<flags id="event_id" value="hide"/>
									<flags id="event_target" value="PHtr"/>
								</record>
							</attachment>

							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="HtHm">
								<record id="action_event">
									<flags id="event_id" value="hide"/>
									<flags id="event_target" value="PHc3"/>
								</record>
							</attachment>

							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="HtHm">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="PHo3"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT OPENS THE SCOUTING PANEL -->
							<attachment class="event_relay_attachment" event_id="HtHm">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="PHMe"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT SHOWS THE CLOSE BUTTON -->
							<attachment class="event_relay_attachment" event_id="HtHm">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="PHc2"/>
								</record>
							</attachment>
						</widget>
										
						<!-- CLOSE BUTTON -->
						<container>
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<widget class="icon_button" id="PHc2" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="tcs/icons/playerhub/switcher/health_bw" hidn="true">
								<translation id="hint" translation_id="249644" type="use"/>
								
								<event id="click_event" event_id="HtHm"/>
									
								<!-- THIS EVENT CLOSES THE SCOUTING PANEL -->
								<attachment class="event_relay_attachment" event_id="HtHm">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="PHMe"/>
									</record>
								</attachment>
																		
								<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
								<attachment class="event_relay_attachment" event_id="HtHm">
									<record id="action_event">
										<flags id="event_id" value="show"/>
										<flags id="event_target" value="PHHm"/>
									</record>
								</attachment>
									
								<!-- THIS EVENT HIDES THE CLOSE BUTTON -->
								<attachment class="event_relay_attachment" event_id="HtHm">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="PHc2"/>
									</record>
								</attachment>
					
							</widget>
						</container>
					</container>
							
					<!-- TRANSFER -->
					<container>
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>

						<!-- OPEN BUTTON -->
						<widget class="icon_button" id="PHo3" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="tcs/icons/playerhub/switcher/transferroom">
							<translation id="hint" translation_id="229719" type="use"/>
							
							<event id="click_event" event_id="HtTr"/>
								
							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="HtTr">
								<record id="action_event">
									<flags id="event_id" value="hide"/>
									<flags id="event_target" value="PHHm"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT OPENS THE SCOUTING PANEL -->
							<attachment class="event_relay_attachment" event_id="HtTr">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="PHtr"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT SHOWS THE CLOSE BUTTON -->
							<attachment class="event_relay_attachment" event_id="HtTr">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="PHc3"/>
								</record>
							</attachment>
						</widget>
										
						<!-- CLOSE BUTTON -->
						<container>
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<widget class="icon_button" id="PHc3" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="tcs/icons/playerhub/switcher/transferroom_bw" hidn="true">
								<translation id="hint" translation_id="249644" type="use"/>
								
								<event id="click_event" event_id="HtTr"/>
									
								<!-- THIS EVENT CLOSES THE SCOUTING PANEL -->
								<attachment class="event_relay_attachment" event_id="HtTr">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="PHtr"/>
									</record>
								</attachment>
																		
								<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
								<attachment class="event_relay_attachment" event_id="HtTr">
									<record id="action_event">
										<flags id="event_id" value="show"/>
										<flags id="event_target" value="PHHm"/>
									</record>
								</attachment>
									
								<!-- THIS EVENT HIDES THE CLOSE BUTTON -->
								<attachment class="event_relay_attachment" event_id="HtTr">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="PHc3"/>
									</record>
								</attachment>
					
							</widget>
						</container>
					</container>
						
	
				</container>
			</container>
	
		</container>
	</container>
	
</panel>