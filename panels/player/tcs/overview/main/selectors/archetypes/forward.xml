<panel>
    <real id="segment_count" value="100" />
    <boolean id="show_inaccurate_category" value="true" />
    <!-- Scale the polygon to fit the widget and draw it in code -->
    <boolean id="scale_picture" value="true" />
    <boolean id="fill_polygon" value="true" alpha="0" />

    <!-- First layer colour-->
    <record id="line_style">
        <colour id="colour" name="tcs_accent" />
        <integer id="alpha" value="70" />
        <real id="width" value="2.0" />
    </record>
    <!-- Second layer colour-->
    <record id="second_colour">
        <colour id="colour" name="fg accent" />
        <real id="width" value="2" />
    </record>
    <!-- Radial lines dividing each segment -->
    <record id="segment_divider_line_props">
        <colour id="colour" red="100" green="100" blue="60" alpha="10" />
        <real id="width" value="1.5" />
    </record>
    <!-- Style of the line around the edge of the polygon -->
    <record id="polygon_edge_line_props">
        <colour id="colour" name="text" />
        <real id="width" value="0.1" />
    </record>
    <!-- Colours (and number) of the concentric polygon rings -->
    <list id="ring_colours">
        <colour red="100" green="100" blue="120" alpha="100"/>
        <colour red="100" green="100" blue="120" alpha="90"/>
        <colour red="100" green="100" blue="120" alpha="80"/>
        <colour red="100" green="100" blue="120" alpha="60"/>
        <colour red="100" green="100" blue="120" alpha="50"/>
    </list>


    <list id="items">
        <!-- layer 1 (there is only one) -->
        <list>
            <!-- HEADING -->
            <record id="item">
                <translation id="name" translation_id="308897" type="use" />
                <translation id="hint" value="Heading&#10;Jumping Reach&#10;Off the Ball" type="use" />
                <real id="max_value" value="20" />
                <integer id="angle" value="30" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pjum" />
                    <integer value="Phea" />
                    <integer value="Potb" />
                </list>
            </record>

            <!-- TECHNIQUE -->
            <record id="item">
                <translation id="name" translation_id="308903" type="use" />
                <translation id="hint" value="Dribbling&#10;First Touch&#10;Long Shots&#10;Technique" type="use" />
                <real id="max_value" value="20" />
                <integer id="angle" value="90" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Ptec" />
                    <integer value="Pdri" />
                    <integer value="Pfrs" />
                    <integer value="Plsh" />
                </list>
            </record>

            <!-- SHOOTING -->
            <record id="item">
                <translation id="name" translation_id="229306" type="use" />
                <translation id="hint" value="Composure&#10;Finishing&#10;Heading" type="use" />
                <real id="max_value" value="20" />
                <integer id="angle" value="150" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pfin" />
                    <integer value="Pcmp" />
                    <integer value="Phea" />
                    <!-- flair -->
                </list>
            </record>

            <!-- HOLD UP PLAY -->
            <record id="item">
                <translation id="name" type="use" value="Hold Up Play" />
                <translation id="hint" type="use" value="Balance&#10;Creativity&#10;Off The Ball&#10;Passing&#10;Strength" />
                <real id="max_value" value="20" />
                <integer id="angle" value="210" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pstr" />
                    <integer value="Potb" />
                    <integer value="Ppas" />
                    <integer value="Pcre" />
                    <integer value="Pbal" />
                </list>
            </record>

            <!-- MOVEMENT -->
            <record id="item">
                <translation id="name" translation_id="230021" type="use"/>
                <translation id="hint" type="use" value="Acceleration&#10;Agility&#10;Pace&#10;Stamina&#10;Strength" />
                <real id="max_value" value="20" />
                <integer id="angle" value="270" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pstr" />
                    <integer value="Ppac" />
                    <integer value="Pacc" />
                    <integer value="Psta" />
                    <integer value="Pagi" />
                </list>
            </record>

            <!-- ANTICIPATION -->
            <record id="item">
                <translation id="name" translation_id="227776" type="use" />
                <translation id="hint" value="Anticipation&#10;Decisions&#10;Off The Ball&#10;Composure" type="use" />
                <real id="max_value" value="20" />
                <integer id="angle" value="335" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pant" />
                    <integer value="Potb" />
                    <integer value="Pdec" />
                    <integer value="Pcmp" />
                </list>
            </record>
        </list>
    </list>
    <!-- outfield analyser panel -->
</panel>