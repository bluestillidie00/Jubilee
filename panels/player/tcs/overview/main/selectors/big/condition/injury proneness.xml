<panel>
  
  <list id="properties_to_forward">
    <record get_property="RAiv" set_property="text" target="RAiv"/>
    <record get_property="IPTc" set_property="colour" target="RAiv"/>
    <record get_property="RAir" set_property="text" target="RAir"/>
  </list>

	<attachment_group class="vertical_arrange_autosize" vertical_gap="0" />

    <!-- value -->
    <widget class="text" id="RAiv" auto_size="vertical" style="bold" size="large"/>

    <!-- description -->
    <widget class="text" id="RAir" alignment="left,top" auto_size="vertical" size="small" colour="faded text" multiline="true"/>
</panel>