<panel>
<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<container id="scou">
<attachment_group class="horizontal_arrange" horizontal_alignment="fill" horizontal_gap="8"/>

		<!-- PROS -->
		<container class="tcs_box" rrep="pro high" transparency="0.6">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>

			<container class="scrolling_box">
				<widget class="horizontal_arrange_container" id="mpro" wrap="true" gap="2" inset="4" auto_size="vertical">
					<integer id="size" value="24" />
				</widget>
			</container>	

			<widget class="text" id="nPro" auto_size="vertical" colour ="faded text" multiline="true" hidden="true"/>
		</container>

		<!-- CONS -->
		<container class="tcs_box" rrep="con high" transparency="0.6">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>

			<container class="scrolling_box">
				<widget class="horizontal_arrange_container" id="mcon" wrap="true" gap="2" inset="4" auto_size="vertical">
					<integer id="size" value="24" />
				</widget>
			</container>	

			<widget class="text" id="nPro" auto_size="vertical" colour ="faded text" multiline="true" hidden="true"/>
		</container>

	</container>
</panel>