<panel>
    <real id="segment_count" value="100" />
    <boolean id="show_inaccurate_category" value="true" />
    <!-- Scale the polygon to fit the widget and draw it in code -->
    <boolean id="scale_picture" value="true" />
    <boolean id="fill_polygon" value="true" alpha="0" />

    <!-- First layer colour-->
    <record id="line_style">
        <colour id="colour" name="tcs_accent" />
        <integer id="alpha" value="70" />
        <real id="width" value="2.0" />
    </record>
    <!-- Second layer colour-->
    <record id="second_colour">
        <colour id="colour" name="fg accent" />
        <real id="width" value="2" />
    </record>

    <!-- Radial lines dividing each segment -->
    <record id="segment_divider_line_props">
        <colour id="colour" red="100" green="100" blue="60" alpha="10" />
        <real id="width" value="1.5" />
    </record>
    <!-- Style of the line around the edge of the polygon -->
    <record id="polygon_edge_line_props">
        <colour id="colour" name="text" />
        <real id="width" value="0.1" />
    </record>
    <!-- Colours (and number) of the concentric polygon rings -->
    <list id="ring_colours">
        <colour red="100" green="100" blue="120" alpha="100"/>
        <colour red="100" green="100" blue="120" alpha="90"/>
        <colour red="100" green="100" blue="120" alpha="80"/>
        <colour red="100" green="100" blue="120" alpha="60"/>
        <colour red="100" green="100" blue="120" alpha="50"/>
    </list>

    <list id="items">
        <!-- layer 1 (there is only one) -->
        <list>
            <!-- TOP PENALTIES -->
            <record id="item">
                <translation id="name" translation_id="542708" type="use" />
                <real id="max_value" value="20" />
                <integer id="angle" value="0" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />
                <list id="attributes">
                    <integer value="Pfin" />
                    <integer value="Pcmp" />
                    <integer value="Ppen" />
                </list>
            </record>

            <!-- TOP RIGHT // AERIAL THREAT -->
            <record id="item">
                <translation id="name"  type="use" value="Aerial" />
                <real id="max_value" value="20" />
                <integer id="angle" value="45" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />
                <list id="attributes">
                    <integer value="Pjum" />
                    <integer value="Pstr" />
                    <integer value="Phea" />
                </list>
            </record>

            <!-- MID RIGHT // BOX THREATS -->
            <record id="item">
                <translation id="name" type="use" value="Box" />
                <real id="max_value" value="20" />
                <integer id="angle" value="90" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pant" />
                    <integer value="Pfin" />
                    <integer value="Potb" />
                </list>
            </record>

            <!-- BOTTOM RIGHT // RECOVERY -->
            <record id="item">
                <translation id="name" type="use" value="Recovery" />
                <real id="max_value" value="20" />
                <integer id="angle" value="135" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Ppac" />
                    <integer value="Pmar" />
                    <integer value="Ptac" />
                </list>
            </record>   

            <!-- BOTTOM // TAKING -->
            <record id="item">
                <translation id="name" value="Taking" type="use" />
                <real id="max_value" value="20" />
                <integer id="angle" value="180" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />
                <list id="attributes">
                    <integer value="Ptec" />
                    <integer value="Pfrk" />
                    <integer value="Pcor" />
                    <integer value="Pcro" />
                    <integer value="Plsh" />
                </list>
            </record>

            <!-- BOTTOM LEFT // COUNTER -->
            <record id="item">
                <translation id="name" type="use" value="Counters" />
                <real id="max_value" value="20" />
                <integer id="angle" value="225" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Ppac" />
                    <integer value="Pdri" />
                    <integer value="Pfin" />
                </list>
            </record>

            <!-- MID LEFT // TRACKERS -->
            <record id="item">
                <translation id="name" translation_id="578076" type="use" />

                <real id="max_value" value="20" />
                <integer id="angle" value="270" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />

                <list id="attributes">
                    <integer value="Pmar" />
                    <integer value="Pcnt" />
                    <integer value="Pant" />
                </list>
            </record>

            <!-- TOP LEFT // AERIAL DEFENDING -->
            <record id="item">
                <translation id="name" type="use" value="Defending" />
                <real id="max_value" value="20" />
                <integer id="angle" value="315" />
                <colour id="colour" name="text" />
                <flags id="standard_spec" value="text" />
                <flags id="size" value="small" />
                <list id="attributes">
                    <integer value="Pjum" />
                    <integer value="Pstr" />
                    <integer value="Ppsn" />
                </list>
            </record>

        </list>
    </list>
    <!-- outfield analyser panel -->
</panel>