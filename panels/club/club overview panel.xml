<panel should_force_refresh="true">
	<layout class="vertical_arrange" vertical_layout="240,-1" vertical_gap="8"/>

	<container class="tcs_box">
		<layout class="stick_to_sides_attachment" apply_to_children="true"/>

		<!-- TOP -->
		<container class="horizontal_adaptive_container" gap="8">

			<!-- PLAYER PROFILE -->
			<container default_width="364">
				<attachment_group class="horizontal_arrange" horizontal_alignment="right,extend"/>
				
				<!-- LEFT -->
				<container>
					<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend"/>

					<!-- LOGOS -->
					<container>
						<attachment_group class="horizontal_arrange" horizontal_alignment="middle" horizontal_gap="0"/>

						<record id="default_properties" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre_x" width="150"/>

						<!-- CLUB LOGO -->
						<container class="object_portrait_picture" id="lepi">
							<record id="object_property" get_property="objt" set_property="objt"/>
						</container>

						<!-- DIV LOGO -->
						<container class="object_portrait_picture" id="cdiv">
							<record id="object_property" get_property="Cdiv"/>
						</container>
					</container>

					<!-- NAME -->
					<widget class="club_button" font="title" icon_enabled="false" alignment="centre,can_scale" size="xlarge" auto_size="vertical" wants_mouse_events="false" colour="fg">
						<record id="object_property" get_property="Cref"/>
					</widget>

					<!-- POSITION IN DIVISION -->
					<container>
						<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="middle" horizontal_gap="0"/>

						<record id="default_properties" alignment="centre,can_scale" auto_size="all" colour="faded text"/>

						<!-- POSITION -->
						<widget class="division_position_button" wants_mouse_events="false">
							<record id="object_property" get_property="Cmai"/>
						</widget>

						<!-- "IN" TEXT -->
						<widget class="text" text=" in "/>

						<!-- DIVISION -->
						<widget class="comp_button" wants_mouse_events="false" icon_enabled="false">
							<record id="object_property" get_property="Cdiv"/>
						</widget>
					</container>
				</container>
				
				<!-- RIGHT // BUTTONS -->
				<container width="32">
					<attachment_group class="vertical_arrange" vertical_alignment="middle"/>
					
					<record id="default_properties" height="32"/>
					
					<!-- HISTORY PANEL -->
					<container>
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>

						<!-- OPEN BUTTON -->
						<widget class="icon_button" id="opn1" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="tcs/icons/club/history" icon_colour="fg">
							<translation id="hint" translation_id="229719" type="use"/>
							
							<event id="click_event" event_id="tchi"/>
								
							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="tchi">
								<record id="action_event">
									<flags id="event_id" value="hide"/>
									<flags id="event_target" value="ttov"/>
								</record>
							</attachment>
							
							<!-- THIS EVENT OPENS THE HISTORY PANEL -->
							<attachment class="event_relay_attachment" event_id="tchi">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="tths"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT SHOWS THE CLOSE BUTTON -->
							<attachment class="event_relay_attachment" event_id="tchi">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="clo1"/>
								</record>
							</attachment>
						</widget>
										
						<!-- CLOSE BUTTON -->
						<container>
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<widget class="icon_button" id="clo1" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="icons/16px/cross" icon_colour="fg" hidn="true">
								<translation id="hint" translation_id="249644" type="use"/>
								
								<event id="click_event" event_id="tchi"/>
									
								<!-- THIS EVENT CLOSES THE SCOUTING PANEL -->
								<attachment class="event_relay_attachment" event_id="tchi">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="tths"/>
									</record>
								</attachment>
																		
								<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
								<attachment class="event_relay_attachment" event_id="tchi">
									<record id="action_event">
										<flags id="event_id" value="show"/>
										<flags id="event_target" value="ttov"/>
									</record>
								</attachment>
									
								<!-- THIS EVENT HIDES THE CLOSE BUTTON -->
								<attachment class="event_relay_attachment" event_id="tchi">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="clo1"/>
									</record>
								</attachment>
					
							</widget>
						</container>
					</container>
								
								<!-- FINANCE PANEL -->
					<container>
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>

						<!-- OPEN BUTTON -->
						<widget class="icon_button" id="opn2" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="icons/26px/finances" icon_colour="fg">
							<translation id="hint" translation_id="229719" type="use"/>
							
							<event id="click_event" event_id="tcfi"/>
								
							<!-- THIS EVENT HIDES THE OVERVIEW PANEL -->
							<attachment class="event_relay_attachment" event_id="tcfi">
								<record id="action_event">
									<flags id="event_id" value="hide"/>
									<flags id="event_target" value="ttov"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT OPENS THE FINANCE PANEL -->
							<attachment class="event_relay_attachment" event_id="tcfi">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="ttfi"/>
								</record>
							</attachment>
								
							<!-- THIS EVENT SHOWS THE CLOSE BUTTON -->
							<attachment class="event_relay_attachment" event_id="tcfi">
								<record id="action_event">
									<flags id="event_id" value="show"/>
									<flags id="event_target" value="clo2"/>
								</record>
							</attachment>
						</widget>
										
						<!-- CLOSE BUTTON -->
						<container>
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<widget class="icon_button" id="clo2" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="icons/16px/cross" icon_colour="fg" hidn="true">
								<translation id="hint" translation_id="249644" type="use"/>
								
								<event id="click_event" event_id="tcfi"/>
									
								<!-- THIS EVENT CLOSES THE FINANCE PANEL -->
								<attachment class="event_relay_attachment" event_id="tcfi">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="ttfi"/>
									</record>
								</attachment>
																		
								<!-- THIS EVENT SHOWS THE OVERVIEW PANEL -->
								<attachment class="event_relay_attachment" event_id="tcfi">
									<record id="action_event">
										<flags id="event_id" value="show"/>
										<flags id="event_target" value="ttov"/>
									</record>
								</attachment>
									
								<!-- THIS EVENT HIDES THE CLOSE BUTTON -->
								<attachment class="event_relay_attachment" event_id="tcfi">
									<record id="action_event">
										<flags id="event_id" value="hide"/>
										<flags id="event_target" value="clo2"/>
									</record>
								</attachment>
					
							</widget>
						</container>
					</container>
						
				</container>

			</container>

			<!-- SELECTORS -->
			<container default_width="-1" class="horizontal_adaptive_container">
				<attachment_group class="horizontal_arrange" horizontal_alignment="fill" horizontal_gap="8"/>

				<!-- DEFAULT PROPERTIES -->
				<record id="default_properties" default_width="-1" minimum_width="400">
					<record id="object_property" get_property="objt" set_property="objt"/>
				</record>

				<!-- SELECTOR 1 -->
				<container class="tcs_box" priority="1">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<container class="team_container_information_overview_panel" file="none">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>
						<record id="object_property" get_property="objt" set_property="objt"/>

						<container class="client_object_viewer_selector_panel" file="club/tcs/overview/header/selector" id="cos1" priority="1" default_widget="clod" late_loading="true"/>
					</container>
				</container>

				<!-- SELECTOR 2 -->
				<container class="tcs_box" priority="2">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<container class="team_container_information_overview_panel" file="none">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>
						<record id="object_property" get_property="objt" set_property="objt"/>

						<container class="client_object_viewer_selector_panel" file="club/tcs/overview/header/selector" id="cos2" priority="1" default_widget="clmp" late_loading="true"/>
					</container>
				</container>

				<!-- SELECTOR 3 -->
				<container class="tcs_box" priority="3">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<container class="team_container_information_overview_panel" file="none">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>
						<record id="object_property" get_property="objt" set_property="objt"/>

						<container class="client_object_viewer_selector_panel" file="club/tcs/overview/header/selector" id="cos3" priority="1" default_widget="clhg" late_loading="true"/>
					</container>
				</container>

				<!-- SELECTOR 3 -->
				<container class="tcs_box" priority="4">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>
					<translation id="title" translation_id="364723" type="use"/>
					<container>
						<attachment_group class="vertical_arrange_autosize"/>

						<!--Derbies-->
						<container class="tcs_table">
							<attachment_group class="vertical_arrange_autosize" alignment="top,extend"/>
							<widget class="label" id="TDeL" auto_size="vertical">
								<record id="object_property" name="true">
									<string id="get_property" value="TDer"/>
								</record>
								<string id="font" value="label"/>
							</widget>
							<widget class="team_derbies_text" id="TDeV" auto_size="all">
								<record id="object_property">
									<string id="get_property" value="TDer"/>
								</record>
							</widget>

						</container>

						<!--Fierce Rivals-->
						<container class="tcs_table_trans">
							<attachment_group class="vertical_arrange_autosize" alignment="top,extend" horizontal_offset="0" vertical_gap="0" vertical_inset="0"/>
							<widget class="label" id="CfmL" auto_size="vertical">
								<record id="object_property" name="true">
									<string id="get_property" value="Cfmr"/>
								</record>
								<string id="font" value="label"/>
							</widget>
							<widget class="club_rivalries_list_text" id="CfmV" auto_size="vertical">
								<record id="object_property">
									<string id="get_property" value="Cfmr"/>
								</record>
							</widget>
						</container>

						<container class="tcs_table">
							<attachment_group class="vertical_arrange_autosize" alignment="top,extend"/>
							<widget class="label" id="CfrL" auto_size="vertical">
								<record id="object_property" name="true">
									<string id="get_property" value="Cfrt"/>
								</record>
								<string id="font" value="label"/>
							</widget>
							<widget class="club_rivalries_list_text" id="CfrV" auto_size="vertical">
								<record id="object_property">
									<string id="get_property" value="Cfrt"/>
								</record>
							</widget>
						</container>
					</container>

				</container>

			</container>
		</container>
	</container>
	
	<!-- BOTTOM SECTION -->
	<container>
		<layout class="stick_to_sides_attachment" apply_to_children="true"/>
	
		<!-- OVERVIEW TAB -->
		<container id="ttov" >
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
	
			<widget class="client_object_viewer_xml_panel" file="club/tcs/overview/tabs/overview">
				<record id="object_property" get_property="objt" set_property="objt"/>
			</widget>
		</container>

		<!-- HISTORY TAB -->
		<container id="tths" hidn="true">
			<animation class="slide_in_top_animation"/>
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
	
			<widget class="client_object_viewer_xml_panel" file="club/tcs/overview/tabs/history">
				<record id="object_property" get_property="objt" set_property="objt"/>
			</widget>
		</container>
		
		<!-- FINANCE TAB -->
		<container id="ttfi" hidn="true" >
			<animation class="slide_in_top_animation"/>
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
	
			<widget class="finances_summary_panel" file="club/tcs/overview/tabs/finances">
				<record id="object_property" get_property="objt" set_property="objt"/>
			</widget>
		</container>


	</container>
</panel>