						<container>
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<!-- OPEN BUTTON -->
							<widget class="icon_button" id="opn2" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="icons/16px/draggable" icon_colour="fg">
								<translation id="hint" translation_id="492120" type="use"/>
							
