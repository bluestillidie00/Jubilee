									</record>
								</attachment>
								
								<!-- THIS EVENT SHOWS THE CLOSE BUTTON -->
								<attachment class="event_relay_attachment" event_id="tspb">
									<record id="action_event">
										<flags id="event_id" value="show"/>
										<flags id="event_target" value="clo2"/>
									</record>
								</attachment>
							</widget>
										
							<!-- CLOSE BUTTON -->
							<container>
								<layout class="stick_to_sides_attachment" apply_to_children="true"/>

								<widget class="icon_button" id="clo2" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="icons/16px/cross" icon_colour="fg" hidn="true">
								<translation id="hint" translation_id="249644" type="use"/>
								
									<event id="click_event" event_id="tspb"/>
									
									<!-- THIS EVENT CLOSES THE SCOUTING PANEL -->
									<attachment class="event_relay_attachment" event_id="tspb">
										<record id="action_event">
											<flags id="event_id" value="hide"/>
											<flags id="event_target" value="tscp"/>
										</record>
									</attachment>
									
									<!-- THIS EVENT HIDES THE CLOSE BUTTON -->
									<attachment class="event_relay_attachment" event_id="tspb">
										<record id="action_event">
											<flags id="event_id" value="hide"/>
											<flags id="event_target" value="clo2"/>
										</record>
									</attachment>
								</widget>
							</container>
						</container>
					</container>
									 
					<!-- WORLD BUTTON -->
					<container width="36">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>
						
						<!-- OPENS THE WORLD PANEL -->
						<container>
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<!-- OPEN BUTTON -->
							<widget class="icon_button" id="opn3" alignment="right,centre_y" icon_alignment="centre_x,centre_y" appearance="buttons/primary/normal/button" rrep="popup_box_background" icon="icons/16px/world" icon_colour="fg">
								<translation id="hint" translation_id="298746" type="use"/>
							
								<event id="click_event" event_id="tsco"/>
								
								<!-- THIS EVENT OPENS THE SCOUTING PANEL -->
								<attachment class="event_relay_attachment" event_id="tsco">
									<record id="action_event">
										<flags id="event_id" value="show"/>
