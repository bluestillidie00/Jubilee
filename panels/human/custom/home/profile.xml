<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<container format="date_and_days">
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

		<!-- NEXT MATCH AVAILABLE -->
		<container id="nemc" hidden="true">
			<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" vertical_offset="0" vertical_gap="8" horizontal_inset="0"/>

			<container class="tcs_box">
				<attachment_group class="vertical_arrange" vertical_alignment="top,extend"/>

				<!-- HEADER -->
				<container class="main_contrast_box" rrep="primary" height="30">
					<attachment_group class="horizontal_arrange" horizontal_alignment="middle"/>

					<record id="default_properties" auto_size="horizontal"/>

					<widget class="picture" file="icons/26px/club" keep_aspect_ratio="true" scale_picture="true" image_alignment="centre" rrep="secondary">
					</widget>

					<widget class="text" text="Upcoming Fixture" font="title" colour="secondary" auto_size="horizontal">
					</widget>
				</container>

				<!-- STADIUM PIC AND BADGES -->
				<container>
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<!-- PULL INFO FROM THIS PANEL -->
					<widget class="team_upcoming_fixture_info_panel" file="none" id="tmip" omit_prefix="true">
						<attachment_group class="vertical_arrange" vertical_alignment="top,extend"/>

						<!-- BADGES AND STADIUM PIC -->
						<container class="client_object_viewer_xml_panel" file="human/custom/home/upcoming" id="tmbp" height="180"/>

						<container class="main_subtle_box">
							<attachment_group class="vertical_arrange_autosize"/>

							<record id="default_properties" alignment="centre" auto_size="vertical"/>

							<!-- DATE -->
							<widget class="label" id="nMat" format="date_and_days"/>

							<!-- team relative positions -->
							<widget class="text" id="temp" colour="text" auto_size="vertical" alignment="centre"/>

							<!--competition-->
							<widget class="text" id="comp" auto_size="vertical" multiline="false" alignment="centre"/>

							<widget class="stadium_button" id="stad" icon_enabled="false">
								<translation id="no_object_text" translation_id="227505" type="use" value="Unknown Stadium"/>
								<string id="format" value="[%stadium#1-short]"/>
							</widget>

							<!-- MANAGER LABELS -->
							<container>
								<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="fill"/>

								<record id="default_properties" alignment="centre" font="label" auto_size="vertical"/>

								<widget class="label">
									<translation id="text" translation_id="227980" type="use"/>
								</widget>
								<widget class="label">
									<translation id="text" type="use" value="Past Meetings"/>
								</widget>
							</container>

							<!-- MANAGER DATA -->
							<container>
								<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="fill"/>

								<record id="default_properties" alignment="centre" colour="text" auto_size="vertical"/>

								<!-- MANAGER -->
								<widget class="person_button" id="mang" style="semi_bold">
									<translation id="no_object_text" translation_id="424586" type="use" value="None[COMMENT: string indicating a club has no manager, different to the previously used ID 227487 so translate accordingly if needed]"/>
								</widget>

								<!-- RECENT FORM -->
								<widget class="team_recent_form_widget" id="pmet" show_no_form_on_empty="true">
								</widget>
							</container>

							<widget class="horizontal_divider"/>

							<container class="player_stats_summary_panel" id="oppt" file="none">
								<attachment_group class="vertical_arrange_autosize"/>

								<!-- Highest Average rating-->
								<container class="vertical_arrange_container" alignment="bottom,extend" gap="4" inset="0" offset="2" height="60">
									<container>
										<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="2"/>
										<layout class="arrange_horizontal_attachment" layout="80, -1,-1" gap="0" offset="0"/>

										<widget class="object_portrait_picture" id="avrp" image_alignment="centre" scale_picture="true"/>

										<container>
											<layout class="arrange_vertical_attachment" alignment="top" gap="2" offset="0"/>
											<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

											<widget class="label" auto_size="vertical" alignment="left">
												<translation id="text" translation_id="227396" type="use" value="Key Player"/>
											</widget>
											<widget class="player_stat_text" id="avra" maxv="1" mode="show_name" multiline="true" auto_size="vertical" style="bold">
												<translation id="text" translation_id="233089" type="use" value="-"/>
											</widget>
										</container>
										<container>
											<layout class="arrange_vertical_attachment" alignment="top" gap="2" offset="0"/>
											<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

											<widget class="label" auto_size="vertical" alignment="right">
												<translation id="text" translation_id="336188" type="use" value="Average Rating[COMMENT: title for table showing players who have the highest average rating]"/>
											</widget>
											<widget class="player_stat_text" id="avr2" mode="show_value,show_as_fraction" auto_size="vertical" style="bold" alignment="right">
												<translation id="text" translation_id="233089" type="use" value="-"/>
											</widget>
										</container>

									</container>
									<widget class="horizontal_divider"/>
								</container>

								<!-- Top Goalcorer-->
								<container height="60">
									<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="2"/>
									<layout class="arrange_horizontal_attachment" layout="80, -1,-1" gap="0" offset="0"/>

									<widget class="object_portrait_picture" id="tgsp" image_alignment="centre" scale_picture="true"/>

									<container>
										<layout class="arrange_vertical_attachment" alignment="top" gap="2" offset="0"/>
										<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

										<widget class="label" auto_size="vertical" alignment="left">
											<translation id="text" translation_id="247695" type="use" value="Top Goalscorer[COMMENT: manager home panel: player stats: top goalscorer label]"/>
										</widget>
										<widget class="player_stat_text" id="tgsc" maxv="3" mode="show_name" multiline="true" auto_size="vertical" style="bold">
											<translation id="text" translation_id="233089" type="use" value="-"/>
										</widget>
									</container>
									<container>
										<layout class="arrange_vertical_attachment" alignment="top" gap="2" offset="0"/>
										<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

										<widget class="label" auto_size="vertical" alignment="right">
											<translation id="text" translation_id="252894" type="use" value="Goals[COMMENT: team stat overall goals scored, short title]"/>
										</widget>
										<widget class="player_stat_text" id="tgs2" mode="show_value,show_as_number" auto_size="vertical" style="bold" alignment="right">
											<translation id="text" translation_id="233089" type="use" value="-"/>
										</widget>
									</container>
								</container>
							</container>

						</container>

					</widget>
				</container>
			</container>

			<container class="tcs_box" height="480">
				<attachment_group class="vertical_arrange" vertical_alignment="top,extend"/>

				<widget class="client_object_viewer_xml_panel" id="huPo" file="human/custom/home/profile widget">
					<record id="object_property" get_property="objt" set_property="objt"/>
				</widget>
			</container>
		</container>

		<!--container shown when there is no next match-->
		<container id="nonm" hidden="true" class="tcs_box">
			<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend"/>

			<!-- REST OF INFO -->
			<container>
				<attachment_group class="vertical_arrange" vertical_alignment="top,extend"/>
			
				<!-- HEADER -->
				<container class="main_contrast_box" rrep="primary" height="30">
					<attachment_group class="horizontal_arrange" horizontal_alignment="middle"/>

					<record id="default_properties" auto_size="horizontal"/>

					<widget class="picture" file="icons/26px/player instructions" keep_aspect_ratio="true" scale_picture="true" image_alignment="centre" rrep="secondary">
					</widget>

					<widget class="text" font="title" colour="secondary" auto_size="horizontal" value="No Matches Planned.">
					</widget>
				</container>
				
				<!-- REST OF PANEL -->
				<container>
					<attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_gap="8"/>
					
					<record id="default_properties" alignment="centre" auto_size="vertical"/>
				
					<!-- LOGOS -->
					<container>
						<attachment_group class="vertical_arrange_autosize"/>
				
						<record id="default_properties" height="150" scale_picture="true" keep_aspect_ratio="true" image_alignment="true"/>
				
						<!-- CLUB LOGO -->
						<widget class="picture" id="tepi"/>
					
						<!-- NATION LOGO -->
						<widget class="picture" id="napi"/>
					</container>
				
					<!--explanatory text-->
					<widget class="text" spec="text">
						<translation id="text" translation_id="296342" type="use"/>
					</widget>
					
					<!--text describing when the next season/competition starts-->
					<widget class="text" id="nmpl"/>
			
					<!--buttons to arrange a friendly-->
					<widget class="link_appearance_button" id="arcf">
						<translation id="text" translation_id="296343" type="use" value="Arrange Club Friendly"/>
						<layout class="centre_in_parent_attachment" alignment="horizontal"/>
					</widget>
					<widget class="link_appearance_button" id="arnf">
						<translation id="text" translation_id="296344" type="use" value="Arrange National Friendly"/>
						<layout class="centre_in_parent_attachment" alignment="horizontal"/>
					</widget>
				</container>
			
			</container>

			<!-- MANAGER PROFILE -->
			<container class="tcs_box" height="480">
				<attachment_group class="vertical_arrange" vertical_alignment="top,extend"/>
			
				<!-- MANAGER PROFILE -->
				<widget class="client_object_viewer_xml_panel" id="huPo" file="human/custom/home/profile widget">
					<record id="object_property" get_property="objt" set_property="objt"/>
				</widget>
			</container>
		</container>

		<!--container shown when manager is unemployed-->
		<container id="unem" hidden="true">
			<attachment_group class="vertical_arrange" vertical_alignment="top" vertical_offset="5"/>

			<!--manager logo-->
			<container>
				<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="middle" vertical_inset="0"/>

				<widget class="picture" height="110" width="110" id="mapi" image_alignment="left" scale_picture="true" keep_aspect_ratio="true">
				</widget>
			</container>

			<!--explanatory text-->
			<widget class="text" alignment="centre" size="large" auto_size="vertical" style="semi_bold, embossed">
				<translation id="text" translation_id="348580" type="use" value="[%person#1-You] are currently unemployed[COMMENT: Game processing panel; punctuation changed - use top-ten matches ]"/>
			</widget>
			<widget class="text" alignment="centre" size="8" auto_size="vertical">
				<translation id="text" translation_id="348582" type="use" value="[%person#1-You] can look for available jobs in the Jobs section[COMMENT: Game processing panel; punctuation changed - use top-ten matches ]"/>
			</widget>

			<!--button to look for jobs-->
			<widget class="link_appearance_button" id="jobc">
				<translation id="text" translation_id="247309" type="use" value="Job Centre"/>
				<layout class="centre_in_parent_attachment" alignment="horizontal"/>
			</widget>
		</container>

	</container>

</panel>
