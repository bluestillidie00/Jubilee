<panel>
	<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="left,extend" horizontal_gap="8"/>

	<container width="150" height="130">
		<layout class="stick_to_sides_attachment" apply_to_children="true"/>

		<!-- PLAYER FACE AND LOGO -->
		<container>
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>

			<!-- LOGO -->
			<container>
				<container height="100" width="100">
					<layout class="stick_to_sides_attachment" alignment="left" inset="12"/>
					<layout class="stick_to_sides_attachment" alignment="top" inset="4"/>
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

					<widget class="object_portrait_picture" id="pclB" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="true" transparency="0.6">
						<layout class="stick_to_sides_attachment" alignment="left" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />						
						<record id="object_property" dont_set_hint="true" get_property="Pclb" set_property="objt" />
					</widget>									
				</container>
			</container>

			<!-- PROFILE PICTURE -->
			<widget class="picture" id="prop" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre_x,bottom" >
				<layout class="stick_to_sides_attachment" alignment="all" inset="6,36,0,0" />
				<record id="object_property">
					<list id="get_properties">
						<record get_property="fcgn" />
						<record get_property="Pfke" />
						<record get_property="prpc" set_property="valu" />
					</list>
				</record>
			</widget>

			<!-- Status Indicators -->
			<widget class="player_status_all_button" id="psAB" maximised="false" auto_size="vertical" alignment="bottom" gap="-2" max_items_per_row_or_column="6">
				<layout class="stick_to_sides_attachment" alignment="top,right" inset="0,2"/>
				<record id="object_property" get_property="Pnfa"/>
			</widget>
		</container>
	</container>

	<container>
		<attachment_group class="vertical_arrange_autosize"/>

		<widget class="person_button" auto_size="all" size="large" info_popup_enabled="true" icon_enabled="true" person_is_player="true" style="semi_bold">
			<record id="object_property" get_property="objt" set_property="valu" />
		</widget>

		<container >
			<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="left,extend"/>

			<widget class="object_portrait_picture" id="npiB" image_alignment="centre" scale_picture="true" wants_mouse_events="true" width="20" height="20">
				<record id="object_property" dont_set_hint="true" get_property="PNat" set_property="objt" />
				<layout class="stick_to_sides_attachment" alignment="top" inset="0" />
			</widget>

			<widget class="player_age_and_description_widget" file="none" height="18">
				<attachment_group class="vertical_arrange_autosize" vertical_offset="0"/>

				<record id="object_property" get_property="objt" set_property="objt" />

				<record id="default_properties" alignment="left,centre_y" auto_size="vertical"/>

				<widget class="text" id="mtxt" >
					<translation id="text" translation_id="347559" type="use" value="[%number#1] year-old [%player_description#1][COMMENT: inbox person information panel; person description]" />
				</widget>

				<!-- PERSONALITY -->
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="0"/>

					<record id="default_properties" alignment="left,centre_y" auto_size="vertical"/>

					<widget class="label" font="label">
						<record id="object_property" get_property="PPst" name="true"/>
					</widget>

					<widget class="personality_label">
						<record id="object_property" get_property="PPst"/>
					</widget>
				</container>
				
				<!-- PERSONALITY -->
				<container>
				<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="fill" horizontal_gap="-10"/>
				
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="0"/>

					<record id="default_properties" alignment="left,centre_y" auto_size="vertical"/>

					<widget class="label" font="label">
						<record id="object_property" get_property="Pcab" name="true"/>
					</widget>

					<widget class="scout_stars_label">
						<record id="object_property" get_property="Pcab"/>
					</widget>
				</container>

				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="0"/>

					<record id="default_properties" alignment="left,centre_y" auto_size="vertical"/>

					<widget class="label" font="label">
						<record id="object_property" get_property="Ppab" name="true"/>
					</widget>

					<widget class="scout_stars_label">
						<record id="object_property" get_property="Ppab"/>
					</widget>
				</container>
				</container>
				
				<container height="2" />
			</widget>

		</container>

	</container>
</panel>