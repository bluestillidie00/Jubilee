<!-- NOTE: The property 'usoc' used on elements tells the panel to recolour them based on object colours -->
<panel  navigation_focus_target="true">
	<layout class="stick_to_sides_attachment" apply_to_children="true"/>

	<container usoc="true" class="main_box">
		<layout class="stick_to_sides_attachment" apply_to_children="true"/>

		<attachment class="hide_empty_container_attachment"/>

		<container id="wcon">
			<layout class="vertical_arrange" vertical_layout="270,-1" vertical_gap="8" />

			<container>
				<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

				<!-- News image -->
				<container id="CNdi" height="270">
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
				</container>
			</container>

			<!-- News item -->
			<container > 
				<attachment_group class="vertical_arrange" vertical_alignment="top,extend" horizontal_alignment="horizontal" vertical_gap="2"/>
				<record id="default_properties" style="bold" multiline="true" auto_size="vertical" />

				<!-- Main object -->
				<!-- Story title (max 2 lines of text)-->
				<widget class="text" id="brif" size="small" colour="faded text"/>
				<widget class="text" id="titl" size="xxlarge" colour="website headline" />
				
					<!-- Related news -->
					<container>
						<layout class="arrange_vertical_attachment" alignment="fill" offset="0" gap="-4" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="5" />

						<!-- Related items, first is match link -->
						<container class="competition_news_item_panel" file="competition/competition news item title only" related_news_index="0" matR="true" />
					</container>
			</container>
		</container>
	</container>

</panel>