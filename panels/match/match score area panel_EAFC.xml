<panel width="300" >
	<layout class="stick_to_sides_attachment" apply_to_children="true" inset="8,8,0,0"/>
	
	<integer id="alSM" value="2" />

	<container id="mtSA">
		<layout class="horizontal_arrange" horizontal_layout="120,-1"  horizontal_gap="0" />

		<container >
			<attachment_group class="vertical_arrange" vertical_alignment="fill" vertical_gap="0"/>

			<container class="main_box_no_margin" appearance="boxes/custom/solid/paper" rrep="tcs_accent" >
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0,0,4,0" />

				<widget class="text" id="Mclk" size="18" font="title" colour="ucl core blue" alignment="centre_x,centre_y">
					<!--Alternate UI mode-->
					<integer id="alSM" value="2" />
				</widget>
				<widget class="text" id="ClkT" size="14" font="champions" colour="ucl core blue" alignment="centre_y,auto_fit">
					<integer id="alSM" value="2" />
				</widget>

			</container>

			<container />		
		</container>

		<container>
			<attachment_group class="vertical_arrange" vertical_alignment="fill" vertical_gap="0"/>

			<!-- HOME TEAM -->
			<container class="client_object_viewer_xml_panel" id="T1Co" override_with_object="true">
				<attachment_group class="horizontal_arrange" horizontal_alignment="left,extend" vertical_inset="0" horizontal_gap="0"/>

				<!-- HOME COLOUR -->
				<container class="main_box_no_margin" id="t1CB" width="8" appearance="boxes/custom/solid/paper">
				</container>

				<!-- HOME NAME -->
				<container class="main_box_no_margin" appearance="boxes/custom/solid/paper" rrep="fg" width="120">
					<attachment_group class="horizontal_arrange" horizontal_alignment="fill" vertical_inset="0,0,4,0" horizontal_gap="0"/>

					<widget class="text_button" id="T1nm" font="title" size="20" alignment="centre" click_event="htac" colour="bg" navigation_focus_target="false" multiline="true">
					</widget>
				</container>

				<!-- HOME SCORE -->
				<container class="main_box_no_margin" appearance="boxes/custom/solid/paper" rrep="bg">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>
					<widget class="text" id="T1sc" size="18" font="title" alignment="centre" colour="white" >
						<layout class="stick_to_sides_attachment" alignment="vertical" inset="0,0,4,0"/>
					</widget>
				</container>
			</container>

			<!-- AWAY TEAM -->
			<container class="client_object_viewer_xml_panel" id="T2Co" override_with_object="true">
				<attachment_group class="horizontal_arrange" horizontal_alignment="left,extend" vertical_inset="0" horizontal_gap="0"/>

				<!-- AWAY COLOUR -->
				<container class="main_box_no_margin" id="t2CB" width="8" appearance="boxes/custom/solid/paper">
				</container>

				<!-- AWAY NAME -->
				<container class="main_box_no_margin" appearance="boxes/custom/solid/paper" rrep="fg" width="120">
					<attachment_group class="horizontal_arrange" horizontal_alignment="fill" vertical_inset="0,0,4,0" horizontal_gap="0"/>

					<widget class="text_button" id="T2nm" font="title" size="20" alignment="centre" click_event="htac" colour="bg" navigation_focus_target="false" multiline="true">
					</widget>
				</container>

				<!-- AWAY SCORE -->
				<container class="main_box_no_margin" appearance="boxes/custom/solid/paper" rrep="bg">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>
					<widget class="text" id="T2sc" size="18" font="title" alignment="centre" colour="white" >
						<layout class="stick_to_sides_attachment" alignment="vertical" inset="0,0,4,0"/>
					</widget>
				</container>
			</container>
		</container>


	</container>


	<!--Dark Magic xml shenanigans to make this button match the above container, while also allowing us to keep the autosize horizontal-->
	<widget class="button" appearance="" navigation_focus_target="false">
		<layout class="stick_to_object_attachment" id="align_top" offset="0" get_side="top" set_side="top" target="mtSA" />
		<layout class="stick_to_object_attachment" id="align_bottom" offset="0" get_side="bottom" set_side="bottom" target="mtSA" />
		<layout class="stick_to_object_attachment" id="align_left" offset="0" get_side="left" set_side="left" target="mtSA" />
		<layout class="stick_to_object_attachment" id="align_right" get_side="right" set_side="right" target="mtSA" />
		<record id="click_event">
			<flags id="event_id" value="TNeV" />
			<integer id="evfl" value="7" />
			<flags id="evtg" value="root" />
		</record>
	</widget>
</panel>